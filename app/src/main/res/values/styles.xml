<resources>

    <style name="AppTheme" parent="Base.Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:alertDialogTheme">@style/MyAlertDialogTheme</item>
    </style>

    <style name="MyAlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog.Alert">
        <item name="android:buttonBarPositiveButtonStyle">
            @style/Widget.MaterialComponents.Button.UnelevatedButton
        </item>
        <item name="android:buttonBarNegativeButtonStyle">
            @style/Widget.MaterialComponents.Button.TextButton
        </item>
    </style>

</resources>
